version: "3.7"

services:
    portainer:
      container_name: portainer
      image: portainer/portainer-ce:latest
      restart: unless-stopped
      ports: 
        - 8000:8000
        - 9000:9000
      volumes:
        - /var/run/docker.sock:/var/run/docker.sock
        - /home/debian/docker/docker_data/:/data
        
